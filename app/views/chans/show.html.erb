<body>
    <div class="form-group">
    <%= form_with(model: @channer, role:"form") do |form| %>
    <%= form.text_field :title, class:"form-control", placeholder:"Your Task"%>
    <%= form.text_field :chan_id, value: @chan.id, type: :hidden %>
    <%= form.text_field :user_id, value: current_user.id, type: :hidden %>
    <%= form.submit class:"btn btn btn-primary", style:"margin-left: 250px"%>
    <% end %>
    </div>
    <ul class="list-unstyled" id="todo"></ul>
</body>

<div id="channers">
  <% @channers.each do |channer| %> <br><br><br>
    <label><%= channer.user.email %></label>
    <p><%= channer.title %></p>
    <p>
      <%= link_to "Delete", channer, 'data-turbo-method': :delete, class:"button-13" %>
    </p>
  <% end %>
</div>

