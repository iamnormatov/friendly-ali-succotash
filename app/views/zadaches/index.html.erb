<body>
  <div class="form-group">
    <h1>Zadaches <small>Comment</small></h1>
    <%= form_with(model: @zadach, role:"form") do |form| %>
      <%= form.text_field :title, class:"form-control", placeholder:"Your Zadach" %>
      <%= form.text_field :project_id, type: :hidden %>
      <%= form.submit class:"btn btn btn-primary", style:"margin-left: 150px"%>
    <% end %>
  </div>
</body>

<br><br>
<div id="zadaches">
  <% @zadaches.each do |zadach| %>
  
  <% if zadach.id %>
    <%= render zadach %>
    <p>
      <%= link_to "Show", zadach, class: "button-13" %>
    </p>
  <% end %>
  <% end %>
</div>


